<Window x:Class="HOK.ProjectSheetManager.Forms.ProjectSheetManagerForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HOK.ProjectSheetManager.Forms"
        mc:Ignorable="d"
        Title="Sheet Management" Height="670" Width="824" Icon="/HOK.ProjectSheetManager;component/Resources/hoklogo.png">
    <Grid>
        <GroupBox Header="Sheet Manager Input/Output File Path" Margin="10,10,10,0" Height="66" VerticalAlignment="Top" FontFamily="HOK Sans">
            <Grid>
                <Button x:Name="btnConnectExcel" Content="Disconnected Excel" Margin="0,10,10,10" FontFamily="HOK Sans" Background="#FFDF3E35" HorizontalAlignment="Right" Width="146" Click="btnConnectExcel_Click"/>
                <TextBox x:Name="txtBxIOFilePath" Margin="10,10,161,10" TextWrapping="Wrap" FontFamily="HOK Sans" MouseDoubleClick="txtBxIOFilePath_MouseDoubleClick" TextChanged="txtBxIOFilePath_TextChanged"/>
            </Grid>
        </GroupBox>
        <GroupBox Header="Sheet Elements" Margin="10,81,0,102" HorizontalAlignment="Left" Width="482" FontFamily="HOK Sans">
            <Grid>
                <TreeView x:Name="trViewSheetElements" Margin="10,40,10,10"/>
                <Button x:Name="btnCheckAll" Content="Check All" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontFamily="HOK Sans" Height="25" Width="80"/>
                <Button x:Name="btnCheckNone" Content="Check None" HorizontalAlignment="Left" Margin="95,10,0,0" VerticalAlignment="Top" FontFamily="HOK Sans" Height="25" Width="80"/>
                <Label Content="Selection Options:" HorizontalAlignment="Left" Margin="180,9,0,0" VerticalAlignment="Top" FontFamily="HOK Sans"/>
                <ComboBox x:Name="cmbBxSelectionFilter" HorizontalAlignment="Left" Margin="301,11,0,0" VerticalAlignment="Top" Width="159" FontFamily="HOK Sans"/>
            </Grid>

        </GroupBox>
        <GroupBox Header="Select Sheet Data Source Table or Worksheet" Margin="497,81,10,0" FontFamily="HOK Sans" Height="220" VerticalAlignment="Top">
            <Grid>
                <ListBox x:Name="lstBxSheetSource" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="10"/>
            </Grid>
        </GroupBox>
        <GroupBox Header="Select a Titleblock for New Sheets" Margin="497,306,10,102" FontFamily="HOK Sans">
            <Grid>
                <ListBox x:Name="lstBxTitleblocks" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="10"/>
            </Grid>
        </GroupBox>
        <GroupBox Header="Sheet Type" Margin="10,0,580,10" FontFamily="HOK Sans" Height="87" VerticalAlignment="Bottom">
            <Grid>
                <RadioButton x:Name="radCreateViewSheets" GroupName="SheetType" Content="Create View Sheets" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontFamily="HOK Sans"/>
                <RadioButton x:Name="radCreatePlaceholderSheets" GroupName="SheetType" Content="Create Placeholder Sheets" HorizontalAlignment="Left" Margin="10,38,0,0" VerticalAlignment="Top" FontFamily="HOK Sans"/>
            </Grid>
        </GroupBox>
        <Button x:Name="btnRenumSheets" Margin="0,0,395,57" HorizontalContentAlignment="Left" Height="40" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="180" FontFamily="HOK Sans">
            <StackPanel Orientation="Horizontal">
                <Image Source="/HOK.ProjectSheetManager;component/Resources/renumber.png" Stretch="Fill" Margin="2"></Image>
                <TextBlock Text="  Renumber Sheets" VerticalAlignment="Center"></TextBlock>
            </StackPanel>
        </Button>
        <Button x:Name="btnRenameViews" Margin="0,0,395,10" HorizontalContentAlignment="Left" Height="40" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="180" FontFamily="HOK Sans">
            <StackPanel Orientation="Horizontal">
                <Image Source="/HOK.ProjectSheetManager;component/Resources/rename.png" Stretch="Fill" Margin="2"></Image>
                <TextBlock Text="   Rename Views" VerticalAlignment="Center"></TextBlock>
            </StackPanel>
        </Button>
        <Button x:Name="btnAddViewsSheets" Margin="0,0,210,57" HorizontalContentAlignment="Left" HorizontalAlignment="Right" Width="180" Height="40" VerticalAlignment="Bottom" FontFamily="HOK Sans">
            <StackPanel Orientation="Horizontal">
                <Image Source="/HOK.ProjectSheetManager;component/Resources/AddViewsToSheets.png" Stretch="Fill" Margin="2"></Image>
                <TextBlock Text="   Add Views To Sheets" VerticalAlignment="Center"></TextBlock>
            </StackPanel>
        </Button>
        <Button x:Name="btnExportSheetData" Margin="0,0,210,10" HorizontalContentAlignment="Left" Height="40" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="180" FontFamily="HOK Sans">
            <StackPanel Orientation="Horizontal">
                <Image Source="/HOK.ProjectSheetManager;component/Resources/export.png" Stretch="Fill" Margin="2"></Image>
                <TextBlock Text="   Export Sheet Data" VerticalAlignment="Center"></TextBlock>
            </StackPanel>
        </Button>
        <Button x:Name="btnCreateUpdateSheets" Margin="0,0,12,10" HorizontalContentAlignment="Left" HorizontalAlignment="Right" Width="193" Height="87" VerticalAlignment="Bottom" FontFamily="HOK Sans">
            <StackPanel Orientation="Horizontal">
                <Image Source="/HOK.ProjectSheetManager;component/Resources/CreateSheets.png" Stretch="Fill" Margin="5,15,5,15"></Image>
                <TextBox Text="Create/Update Sheets" Height="36" Width="105" Background="{x:Null}" BorderBrush="{x:Null}" TextWrapping="Wrap" TextAlignment="Center"/>
            </StackPanel>
        </Button>
    </Grid>
</Window>
