<Window x:Class="HOK.RoomUpdater.RoomUpdaterErrorWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             Height="300" Width="500" Title="Room Updater Error Messages" Icon="Images/hoklogo.ico">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <Button x:Name="buttonOK" Content="OK" HorizontalAlignment="Right" Margin="0,0,15,10" Grid.Row="1" VerticalAlignment="Bottom" Width="75" Click="buttonOK_Click"/>
        <GroupBox Header="Messages" HorizontalAlignment="Stretch" Margin="10" VerticalAlignment="Stretch">
            <Grid>
                <TextBox x:Name="textBoxError" HorizontalAlignment="Stretch" Margin="7" TextWrapping="Wrap" VerticalAlignment="Stretch"  VerticalScrollBarVisibility="Auto"/>
            </Grid>
        </GroupBox>


    </Grid>
</Window>
